<div class="main-container">
  <div class="sub-container">
    <h2>Create Account</h2>
    <p class="Welcome-p">
      Join EchoTix to explore and book live music events, bands, and artists.
    </p>

    <% if (errors && errors.length > 0) { %>
    <ul class="error-messages">
      <% errors.forEach(function(error) { %>
      <li><%= error.msg %></li>
      <% }) %>
    </ul>
    <% } %>
    <form
      action="/user/newaccount"
      method="POST"
      class="Bandform"
      enctype="multipart/form-data"
    >
      <label for="username">Username:</label>
      <div class="input-icon">
        <i class="fa-solid fa-user"></i>
        <input type="text" name="username" placeholder="albert" required />
      </div>
      <label for="email">Email:</label>
      <div class="input-icon">
        <i class="fa-solid fa-envelope"></i>
        <input
          type="email"
          name="email"
          placeholder="albert@example.com"
          required
        />
      </div>

      <label for="password">Password:</label>
      <div class="input-icon">
        <i class="fa-solid fa-lock"></i>
        <input
          type="password"
          name="password"
          placeholder="At least 8 characters, 1 uppercase, 1 number, 1 symbol"
          required
        />
      </div>
      <label for="confirmPassword">Confirm Password:</label>
      <div class="input-icon">
        <i class="fa-solid fa-lock"></i>
        <input
          type="password"
          name="confirmPassword"
          placeholder="At least 8 characters, 1 uppercase, 1 number, 1 symbol"
          required
        />
      </div>

      <label for="profilephoto">Profile pic</label>
      <input
        type="file"
        name="profilephoto"
        id="profilephoto"
        accept="image/*"
      />
      <button type="submit">Create Account</button>
      <p class="haveaccount-p">
        Already have an account? <a href="/user/login">Login</a>
      </p>
    </form>
  </div>
</div>
